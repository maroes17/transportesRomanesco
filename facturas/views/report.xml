<odoo>
  <data>
   <report id="report_facture"
   string="Imprimir Factura"
   model="facturas.factura"
   report_type="qweb-pdf"
   name="facturas.report_facturas_template"
   />

   <template id="report_facturas_template">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="o">
       <t t-call="web.external_layout">
         <div class="header" style="background-color:#D6DBDF;">   
         HEADER 
         </div>

         <div class="page">   
          <hr />
          <h1 align="center">Factura N째<span t-field="o.id"/> </h1>
          <hr />
           <h2>Fecha de emisi처n</h2>
           <p><span t-field="o.fecha"/></p>
          <hr />


          

           <!-- tabla datos empresa -->

           <table class="table table-borderless table-sm">
            <thead class="thead-dark">
                <tr>
                  <th scope="col">Datos de la empresa</th>
                  <th scope="col">Datos del cliente</th>
                </tr>
            </thead>
            <tbody>
             <tr>
                <td><span t-field="o.field_empresa" /></td>
                <td><span t-field="o.field_cliente" /></td>
             </tr>

              <tr>
                <td><t t-foreach="request.env['facturas.empresa'].search([])" t-as="obj">
              <t t-esc="obj.rutp"/>
                </t></td>
                <td><t t-foreach="request.env['facturas.cliente'].search([])" t-as="obj">
                <t t-esc="obj.rutc"/>
                </t></td>
             </tr>

                <tr>
                <td><t t-foreach="request.env['facturas.empresa'].search([])" t-as="obj">
                 <t t-esc="obj.direccionp"/>
                </t></td>
                <td><t t-foreach="request.env['facturas.cliente'].search([])" t-as="obj">
                <t t-esc="obj.domicilioc"/>
                </t></td>
             </tr>

                <tr>
                <td><t t-foreach="request.env['facturas.empresa'].search([])" t-as="obj">
              <t t-esc="obj.telefonop"/>
                </t></td>
                <td><t t-foreach="request.env['facturas.cliente'].search([])" t-as="obj">
                <t t-esc="obj.telefonoc"/>
                </t></td>
             </tr>
            </tbody>
           </table>

           <!-- aaaaaaaaaaaaaaaaaaaaaaaaaa -->
           <!-- tabla metodos de pago -->
            <table class="table table-borderless table-sm">
            <thead class="thead-dark">
                <tr>
                  <th scope="col">Metodo de pago</th>
                  <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
             <tr>
                <tr>
                  <td><span t-field="o.metodo" /></td>
                </tr>
             </tr>
            </tbody>
           </table>
           <!-- eeeeeeeeeeeeeeeeeeeeeeeee -->
           <!-- Tabla de descripci처n -->
           <table class="table table-borderless table-sm">
            <thead class="thead-dark">
                <tr>
                  <th scope="col">Descripci처n del producto</th>
                   <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
             <tr>
                <tr>
                  <td><span t-field="o.descriptionproduct" /></td>
                   <td><t t-foreach="request.env['viajes.hojaderuta'].search([])" t-as="obj">
              <t t-esc="obj.descripcion"/>
                </t></td>
                </tr>
             </tr>
            </tbody>
           </table>
           <!-- iiiiiiiiiiiiiiiiiiii -->
           <!-- TABLA PRECIOS -->
          <table class="table table-borderless table-sm">
            <thead class="thead-dark">
                <tr>
                  <th scope="col">Total a cobrar</th>
                   <th scope="col"></th>
                </tr>
            </thead>
            <tbody>

             <tr class="border-top">
               <th scope="row">Precio:</th>
               <th scope="row"> $<span t-field="o.precio" /></th>
             </tr>
             
             <tr class="border-top">
               <th scope="row">IVA:</th>
               <th scope="row"> $<span t-field="o.iva" /></th>
             </tr>
             
             <tr class="border-top">
               <th scope="row">Total a pagar:</th>
               <th scope="row"> $<span t-field="o.preciototal" /></th>
             </tr>
             <hr />
            </tbody>
           </table>
           <hr />
           <!-- OOOOOOOOOOOOO000000 -->
          
         </div>

         <div class="footer" > 
         <hr />
          <h6 align="center">Transportes Romanesco</h6>
         </div>
        </t>
      </t>
    </t>
   </template>

  </data>
</odoo>